<div class="row" style="margin-top: -150px">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h2 class="text-center">Register</h2>
      {{> messages}}
      <form action="/users/register" method="post">
        <div class="form-group">
          <label for="name">User Name</label>
          <input class="form-control" type="text" name="name" id="name" placeholder="Please enter your name"
            value="{{ name }}">
        </div>

        <div class="form-group">
          <label for="email">Email</label><span class="requiredInput"> *</span>
          <input class="form-control" type="email" name="email" id="email" placeholder="Your email" value="{{ email }}">
        </div>

        <div class="form-group">
          <label for="password">Password</label><span class="requiredInput"> *</span>
          <input class="form-control" type="password" name="password" id="password" placeholder="Your password"
            value="{{ password }}">
        </div>

        <div class="form-group">
          <label for="confirmPassword">Confirm your password</label><span class="requiredInput"> *</span>
          <input class="form-control" type="password" name="confirmPassword" id="confirmPassword"
            placeholder="Your password" value="{{ confirmPassword }}">
        </div>

        <button type="submit" class="btn btn-primary btn-block mt-3">Register!</button>
        <a class="mt-2" style="display: block" href="/users/login">Already have an account?</a>
      </form>
    </div>
  </div>
</div>
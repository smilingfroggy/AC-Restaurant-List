<h1 class="mb-1 restaurant-show-title">{{storeInfo.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 m-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{storeInfo.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{storeInfo.location}}
        <a href="{{storeInfo.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{storeInfo.phone}}
      </p>

      <p class="mb-5">
        {{storeInfo.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{storeInfo.image}}" alt="{{storeInfo.name}}"
        style="max-width: 600px;">

      <div class="d-flex justify-content-center mb-5">
        <a href="/restaurants/edit/{{storeInfo._id}}" class="btn btn-light btn-lg" role="button"><i
            class="fas fa-pen fa-xs"></i></a>

        {{!-- <a href="/restaurants/delete/{{storeInfo._id}}" class="btn btn btn-light btn-lg" role="button"><i
            class="far fa-trash-alt"></i></a> --}}
        <form onsubmit="return confirm(' Are you sure you want to delete {{storeInfo.name}}? ')"
          action="/restaurants/{{storeInfo._id}}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-light btn-lg"><i class="far fa-trash-alt"></i>
          </button>
        </form>
      </div>

    </div>
  </div>
</div>